<div class="ui centered cards">
    {{#each games}}
    <div class="ui card">
      <div class="image">
        <img src="{{picture}}">
      </div>    
      <div class="content">
        <a class="header">{{uppercase title}}</a>
        <div class="metadata">
          <span class="date">作成されました： {{formatDate date}}</span>
        </div>
      </div> 
      <div class="extra content">
        <a href="/game/{{id}}" class="ui icon button">
          <i class="icon folder open"></i>
        </a>
    <a href="/dashboard/deletegame/{{id}}" class="ui icon button delgame">
      <i class="icon trash"></i>
        </a>
      </div>
    </div>
  {{/each}}
</div>